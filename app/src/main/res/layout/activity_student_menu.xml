<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".studentMenu"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Menu"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ffff299f"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:onClick="plusQuestion">

        <TextView
            android:id="@+id/plus"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="fill"
            android:text="Plus"
            android:textColor="#ffff299f" />

        <ImageButton
            android:id="@+id/plusImage"
            android:layout_width="54dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plus" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:onClick="minusQuestion">

        <TextView
            android:id="@+id/minus"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="fill"
            android:text="Minus"
            android:textColor="#ffff299f"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/minusImage"
            android:layout_width="54dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/minus"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:onClick="multQuestion">

        <TextView
            android:id="@+id/multiple"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="fill"
            android:text="Multiplication"
            android:textColor="#ffff299f"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/multipleImage"
            android:layout_width="54dp"
            android:layout_height="62dp"
            android:src="@drawable/multiple"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:onClick="question"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:onClick="divQuestion">

        <TextView
            android:id="@+id/division"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="fill"
            android:text="Division"
            android:textColor="#ffff299f"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/divisionImage"
            android:layout_width="54dp"
            android:layout_height="62dp"
            android:src="@drawable/division"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>




    <ImageView
        android:id="@+id/aplusImage"
        android:layout_width="381dp"
        android:layout_height="142dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/aplus"
        android:layout_marginTop="90dp"/>

</LinearLayout>


